#!/bin/bash
# Automatic commit and push to main

# Color codes
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Get commit message from argument or prompt
if [ -z "$1" ]; then
  echo -e "${YELLOW}Enter commit message:${NC}"
  read -r COMMIT_MSG
else
  COMMIT_MSG="$*"
fi

# Add all changes
echo -e "${GREEN}Adding all changes...${NC}"
git add -A

# Create commit with co-authorship
echo -e "${GREEN}Creating commit...${NC}"
git commit -m "$COMMIT_MSG

Co-Authored-By: Claude Sonnet 4.5 <noreply@anthropic.com>"

# Push to origin/main
echo -e "${GREEN}Pushing to origin/main...${NC}"
git push origin main

echo -e "${GREEN}âœ“ Committed and pushed successfully!${NC}"
echo -e "${YELLOW}Cloudflare Pages will auto-deploy in 1-2 minutes${NC}"
